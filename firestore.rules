rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Read-only public access for all grammar content collections
    // No authentication required - anonymous content delivery
    
    match /verbs_prepositions/{document=**} {
      allow read: if true;
      allow write: if false;  // Only allow writes from Firebase Console or Admin SDK
    }
    
    match /articles/{document=**} {
      allow read: if true;
      allow write: if false;  // Only allow writes from Firebase Console or Admin SDK
    }
    
    match /clauses/{document=**} {
      allow read: if true;
      allow write: if false;  // Only allow writes from Firebase Console or Admin SDK
    }
  }
}
