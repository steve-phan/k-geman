<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/typeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nebensatz"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/accent_light"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/conjunctionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conjunction: weil"
                android:textSize="14sp"
                android:textColor="@color/secondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/sentenceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ich lerne Deutsch, weil ich nach Deutschland reisen möchte."
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/translationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm learning German because I want to travel to Germany."
            android:textSize="14sp"
            android:textColor="@color/secondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/explanationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The verb 'möchte' moves to the end in the subordinate clause."
            android:textSize="13sp"
            android:textColor="@color/explanation"
            android:background="@color/explanation_bg"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
