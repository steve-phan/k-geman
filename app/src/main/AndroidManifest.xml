<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KGeman">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VerbsWithPrepositionsActivity"
            android:label="@string/verbs_with_prepositions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArticlesActivity"
            android:label="@string/articles"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ClausesActivity"
            android:label="@string/clauses"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>
